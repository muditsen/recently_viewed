<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_itemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/rctp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_itemImage"
        android:layout_alignLeft="@+id/iv_itemImage"
        android:layout_alignRight="@+id/iv_itemImage"
        android:layout_alignStart="@+id/iv_itemImage"
        android:layout_below="@id/iv_itemImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/text_color_66"
            android:singleLine="true"
            android:textSize="14sp"
            tools:text="Brand Name" />

        <TextView
            android:id="@+id/tv_itemSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="13sp"
            android:textColor="@color/text_color_99"
            android:singleLine="true"
            tools:text="Product Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                tools:text="Rs. 50"
                android:textColor="@color/text_color_22"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_itemLinePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_color_99"
                android:layout_marginLeft="5dp"
                tools:text="Rs. 100" />

            <TextView
                android:id="@+id/it_itemDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                tools:visibility="visible"
                android:layout_marginLeft="10dp"
                android:text="(50%)"
                android:textColor="@color/text_color_e74f1e"
                android:singleLine="true"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
